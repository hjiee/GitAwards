<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:loadUrl="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.repo.gitawards.data.entity.AwardsEntity" />

        <variable
            name="reponse"
            type="com.repo.gitawards.network.model.GithubResponse.Items" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border"
        android:elevation="2dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_profile"
                loadUrl="@{reponse.htmlUrl}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:contentDescription="profile" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/ItemTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{reponse.name}"
                android:hint="ueser name" />

            <TextView
                android:id="@+id/tv_rank"
                style="@style/ItemTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="rank" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/tv_star"
                    app:layout_constraintHorizontal_chainStyle="packed"/>
                <TextView
                    android:id="@+id/tv_star"
                    style="@style/ItemTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="stars"
                    android:text="@{reponse.starCount}"
                    app:layout_constraintTop_toTopOf="@+id/iv_star"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_star"
                    app:layout_constraintLeft_toRightOf="@+id/iv_star"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>